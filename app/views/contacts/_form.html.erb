<%= form_for(@contact) do |f| %>
	
	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>

	<div>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>

	<div>
		<%= f.label :content %>
		<%= f.text_area :content, size: "x6" %>
	</div>

	<div>
		<%= f.submit class: "button" %>
	</div>

<% end %>